.infobar
  width infobarWidth
  position absolute
  right 0px
  top 0px
  bottom 0px
  background lighten(ColorGreyBg, 80%)
  border-left 1px solid lighten(ColorGreyBg, 30%)
  padding 20px 10px
  .total
    display block
    float left
    width 100%
    font-size 3em
    line-height 1em
    margin-bottom 10px
    color #333

  .histogram
    float left
    width 100%
    height 140px
    margin-top 15px
    position relative
    .bar
      float left
      position relative
      .fill
        background ColorHeading
        position absolute
        bottom 0px
        width 100%
        min-height 1px
        border-right 1px solid lighten(ColorGreyBg, 80%)
    &.time
      .bar
        width (100% / 24)
        height @height
    &.day
      .bar
        width (100% / 7)
        height @height
        &:nth-child(6)
        &:nth-child(7)
          .fill
            background lighten(ColorHeading, 10%)
  .typy
    list-style-type none
    margin 10px 0px
    padding 0px
    float left
    width 100%
    position relative
    li
      position absolute
      left 0px
      width 100%
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      .name
        position relative
        z-index 2
      .fill
        z-index 1
        position absolute
        top 0px
        left 0px
        height 22px
        background lighten(ColorHeading, 98%)
        border-bottom 4px solid ColorHeading



