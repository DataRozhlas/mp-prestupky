.infobar
  width infobarWidth
  position absolute
  right 0px
  top 0px
  bottom 0px
  background lighten(ColorGreyBg, 80%)
  border-left 1px solid lighten(ColorGreyBg, 30%)
  padding 20px 10px
  .total
    display block
    float left
    width 100%
    font-size 3em
    line-height 1em
    margin-bottom 10px
    color #333

  .histogram
    float left
    width 100%
    height 140px
    position relative
    .bar
      float left
    &.time
      .bar
        width (100% / 24)
        height @height
        position relative
        .fill
          background ColorHeading
          position absolute
          bottom 0px
          width 100%
          min-height 1px
          border-right 1px solid lighten(ColorGreyBg, 80%)

