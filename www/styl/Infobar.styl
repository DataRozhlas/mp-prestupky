.infobar
  width infobarWidth
  position absolute
  right 0px
  top 0px
  bottom 0px
  background lighten(ColorGreyBg, 80%)
  border-left 1px solid lighten(ColorGreyBg, 30%)
  padding 20px 10px
  h2
    color ColorHeading
    font-size 20px
    margin 0px
  .subtitle
    display none
    color #6
    font-style italic
    margin-top 6px
  h3
    color black
    float left
    clear left
    font-variant small-caps
    font-weight normal
    margin 20px 0px 16px 0px
    border-bottom 1px solid black
  &.nodata
    h3
    .total
      color #a
    h3
      border-bottom-color #a
    .subtitle
      display block
  .total
    display block
    float left
    width 100%
    line-height 3em
    margin-bottom -15px
    margin-top 15px
    color #333
    font-variant small-caps
    .value
      font-size 3em
      font-family 'Open Sans', sans-serif
      font-weight 400
    .suffix
      padding-left 10px

  .histogram
    float left
    width 100%
    height 140px
    position relative
    .bar
      float left
      position relative
      .fill
        background ColorHeading
        position absolute
        bottom 0px
        width 100%
        min-height 1px
        border-right 1px solid lighten(ColorGreyBg, 80%)
    &.time
      .bar
        width (100% / 24)
        height @height
    &.day
      .bar
        width (100% / 7)
        height @height
        &:nth-child(6)
        &:nth-child(7)
          .fill
            background lighten(ColorHeading, 10%)
  ol.typy
    list-style-type none
    margin -5px 0px 0px 0px
    padding 0px
    float left
    width 100%
    height 350px
    overflow-x hidden
    overflow-y auto
    position relative
    li
      position absolute
      left 0px
      width 100%
      overflow hidden
      white-space nowrap
      text-overflow ellipsis
      .name
        position relative
        z-index 2
      .fill
        z-index 1
        position absolute
        top 0px
        left 0px
        height 22px
        background lighten(ColorHeading, 98%)
        border-bottom 4px solid ColorHeading
